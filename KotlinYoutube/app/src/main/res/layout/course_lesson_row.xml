<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/course_detail_row_imageUrl_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/course_detail_row_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="title"
        app:layout_constraintStart_toEndOf="@+id/course_detail_row_imageUrl_imageView"
        app:layout_constraintTop_toTopOf="@+id/course_detail_row_imageUrl_imageView" />

    <TextView
        android:id="@+id/course_detail_row_duration_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="text view2"
        app:layout_constraintStart_toStartOf="@+id/course_detail_row_name_textView"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_row_name_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>